@{
    ViewBag.Title = "The Leading resource for Black Entrepreneurship";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <h1>@ViewBag.Title</h1>
    <p>Welcome to Bit Main Street The Leading Resource for Black Entrepreneurship.</p>
    <div class="product-info">
        <img src="~/img/Emrald-Tables.jpg" />
        <h3>Billy Carson Book</h3>
        <ul class="product-props">
            <li>Price: 15.00</li>
            <li>Author: Billy Carson</li>
            <li>Title: Emrald Tablets</li>
            <li>Description: Compendium of the Emrald Tablets Book</li>
        </ul>
        <button id="buyButton">Purchase</button>
    </div>
    <div>
        <form id="theForm">
            <lable>Username</lable>
            <br />
            <input />
            <br />
            <lable>Password</lable>
            <br />
            <input type="password" />
            <br />
            <lable>Email</lable>
            <br />
            <input type="email" />
            <br />
            <lable>Subject</lable>
            <br />
            <input type="text" />
            <br />
            <lable>Message</lable>
            <br />
            <textarea rows="4"></textarea>
            <br />
            <input type="submit" value=" Send Message" />
        </form>
    </div>

    <div id="loginToggle">Login</div>
    <form class="popupform">
        <div>
            <lable>Username</lable>
            <input />
        </div>
        <div>
            <lable>Password</lable>
            <input type="password" />
        </div>
        <div>
            <input type="checkbox" />
            <lable>Remmber Me?</lable>
        </div>
        <div>
            <input type="submit" value="Login" />
        </div>
    </form>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>